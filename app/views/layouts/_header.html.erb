<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="header-left">
          <div class="logo">
            <a href="#"><%= image_path 'images/logo.png' %></a>
          </div>
          <div class="menu">
            <a class="toggleMenu" href="#"><%= image_tag('images/nav.png') %></a>
            <ul class="nav" id="nav">
              <li><%= link_to('Shop', shop_path) %></li>
              <li><%= link_to('Team', root_path) %></li>
              <li><%= link_to('Events', root_path) %></li>
              <li><%= link_to('Experience', root_path) %></li>
              <li><%= link_to('Company', root_path) %></li>
              <li><%= link_to('Contact', root_path) %></li>
              <div class="clear"></div>
            </ul>
            <!--<script type="text/javascript" src="js/responsive-nav.js"></script>-->
          </div>

        </div>
        <div class="header_right">
          <!-- TODO Decide how to update this small counter aswell-->
          <% unless current_order.order_items.size == 0 %>
              <span class="badge cart-item-count"><%=current_order.order_items.size%></span>
          <% end %>
          <ul class="icon1 sub-icon1 profile_img">
            <li><a class="active-icon c1 cart-icon" href="#"> </a>
              <ul class="sub-icon1 list">
                <%= render 'carts/small_shopping_cart', order_items: current_order.order_items %>
              </ul>
            </li>
          </ul>
          <div class="clear"></div>
        </div>
      </div>
    </div>
  </div>
</div>