<div class="col-md-3 shop_box">
  <%= image_tag(product.pictures.first.image, class: 'img-responsive', alt: '') %>
    <span class="new-box">
        <span class="new-label">New</span>
    </span>
    <span class="sale-box">
        <span class="sale-label">Sale!</span>
    </span>
  <div class="shop_desc">
    <h3><%= product.title %></h3>
    <p><%= truncate(product.description, length: 35) %></p>
    <span class="reducedfrom">$66.00</span>
    <span class="actual">$<%= product.price %></span><br>
    <%= form_for order_item, remote: true do |f| %>
      <ul class="buttons">
        <%= f.hidden_field :product_id, value: product.id %>
        <li class="cart"><%= f.submit 'Add to Cart', class: 'btn btn-info btn-sm add-to-cart', remote: true %></li>
        <!--<li class="cart"><button type="button", class='btn btn-info btn-sm add-to-cart'>Add to cart</button></li>-->
        <li class="shop_btn"><a href="#">Read More</a></li>
        <div class="clear"> </div>
      </ul>
    <% end %>
  </div>
</div>